{
    "manifest_version": 3,
    "name": "Prayer Times / Namaz Vakitleri",
    "description": "Display prayer times for your location.",
    "version": "0.0.1",
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "alarms",
        "storage"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "host_permissions": [
		"*://*.namazvakitleri.diyanet.gov.tr/*",
        "*://www.islamicfinder.us/index.php/api/*"
	],
    "web_accessible_resources": [
        {
            "resources": ["libs/fuse.min.js"],
            "matches": ["<all_urls>"]
        }
    ]
}